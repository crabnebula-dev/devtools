---
import clsx from "clsx";

const { type, href } = Astro.props;

let className: string;

switch (type) {
  case "primary":
    className = "bg-white border-white text-gray-950";
    break;
  case "secondary":
    className = "bg-brand-200 border-brand-200 text-brand-900";
    break;
  default:
    className = "bg-transparent border-white text-white";
    break;
}
---

<a
  class={clsx(
    className,
    "text-sm md:text-base border-2 rounded-full py-2 px-4"
  )}
  href={href}
>
  <slot /></a
>
